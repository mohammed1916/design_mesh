{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "ESNext",
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
}
